<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/article_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/holo_blue_dark"
        />

    <TextView
        android:id="@+id/section_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_below="@id/article_title_text"
        android:textColor="@android:color/holo_purple"/>

    <TextView
        android:id="@+id/author_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_alignParentRight="true"
        android:layout_below="@id/section_name_text"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/date_published_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_alignParentRight="true"
        android:layout_below="@id/author_name_text"
        android:textColor="@android:color/holo_orange_light"/>

</RelativeLayout>
